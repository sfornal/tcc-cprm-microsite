extends _layout

block content
    .pageWrap
        header.header.gradientTextureBg(role="header")
            .innerWrap(role="banner")
                a(href="https://www.tccd.edu/" target="_blank")
                    img.header-banner-top(role="presentation" alt="" src="img/header-5-top.svg" aria-labelledby="collegeName")
                    p#collegeName.visuallyhidden Tarrant County College
                a(href="https://www.tccd.edu/outreach/checklist/")
                    img.header-banner-bottom(role="presentation" alt="" src="img/header-5-bottom.svg" aria-labelledby="pageHeading")
                    h1#pageHeading.visuallyhidden For Many, College Seems Out of Reach

        main.main(role="main")
            .lede.innerWrap
                h2.lede-heading Sara’s Success Story
                //- h3.lede-heading You've taken the first step.
                img.lede-image(src="img/Sara.jpg" alt="A time-lapse image showing Sara transition from a mother to a chef cooking in a restaurant kitchen")

            .checklistWrap
                .checklist.innerWrap
                    blockquote
                        p.quote I’ve been a stay-at-home mom for 10+ years. I’m going to school for my children and myself, to give us all a better future. Of course I was scared - how was I going to get the money to go to college? I chose to come to TCC because it was affordable and the programs are amazing. You can do it, too. As a mom, you can continue on with your career!
                        p.attribution Sara Ferris, TCC Culinary Student
                    
        .successStoriesWrap.gradientTextureBg
            .successStories.innerWrap
                h2.successStories-tagline Sara’s Commercial
                .videoEmbed
                    .videoEmbed-videoWrap
                        iframe(width="100%" src="https://www.youtube.com/embed/YXfqCuCbXWA?rel=0" frameborder="0" allowfullscreen="true").video
                
                h2.successStories-tagline Behind-The-Scenes Interview
                .videoEmbed
                    .videoEmbed-videoWrap
                        iframe(width="100%" src="https://www.youtube.com/embed/qIpfZNZ25VU?rel=0" frameborder="0" allowfullscreen="true").video
                
        .requestInfo
            .requestInfo-formWrap.innerWrap
                .requestInfo-headingWrap
                    h2.requestInfo-heading #[a(href="http://www.tccd.edu/admission/how-to-apply/") Apply] Today!
                    h3.requestInfo-heading or #[br] Request Information
                    p I’m ready to make myself a priority! Please send me information to help me get started.
                form#requestInfoForm.requestInfo-form(action="http://apps.tccd.edu/RequestInfo/Handler.ashx" method="post")
                    .form-inputWrap
                        label.form-label(for="name") Full Name
                        input.form-input#name(type="text" name="name" placeholder="Jessica Jones" required value="")

                    .form-inputWrap
                        label.form-label(for="email") Email
                        input.form-input#email(type="email" name="email" placeholder="jessica@example.com" required value="")

                    .form-inputWrap
                        input.button.button--submit#submit(type="submit" value="Submit" name="submit")

                    input(type="hidden" name="token" value="microsite")
                    input(type="hidden" name="source" value="Checklist Marketing Campaign Jose")

                .requestInfo-formResponse

                .requestInfo-headingWrap
                    h3.requestInfo-phoneHeader If you have questions call:
                    p.requestInfo-phoneNumber 817-515-8223

        

        include jade-partials/_footer.jade

    script.
        (function(w,d){
            var element = d.createElement('p');
            element.id = 'delete-me';
            if (! (w.getComputedStyle && d.getElementsByTagName && element.classList)) {
                console.log('Basic page support only');
                return;
            }
            var html = d.getElementsByTagName('html')[0],
            body = d.getElementsByTagName('body')[0],
            properties = {
                'webkitTransformStyle':'-webkit-transform-style',
                'MozTransformStyle':'-moz-transform-style',
                'msTransformStyle':'-ms-transform-style',
                'transformStyle':'transform-style'
            };

            body.insertBefore(element, null);

            for (var i in properties) {
                if (element.style[i] !== undefined) {
                    element.style[i] = 'preserve-3d';
                }
            }

            var st = w.getComputedStyle(element, null),
                transform = st.getPropertyValue("-webkit-transform-style") || st.getPropertyValue("-moz-transform-style") || st.getPropertyValue("-ms-transform-style") || st.getPropertyValue("transform-style");

            console.log('transform: ' + transform);
            if (transform === 'preserve-3d') {
                html.classList.remove('basic-page');
            }
            body.removeChild(element);
        })(window, document);
